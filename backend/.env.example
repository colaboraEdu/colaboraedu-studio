# colaboraEDU Backend Configuration
# Copy this file to .env and fill with your values

# Application
APP_NAME="colaboraEDU API"
APP_VERSION="1.0.0"
DEBUG=True

# Server
HOST="0.0.0.0"
PORT=8004
RELOAD=True

# Database
DATABASE_URL="sqlite:///./colaboraedu.db"
# For PostgreSQL: DATABASE_URL="postgresql://user:password@localhost/colaboraedu"
DATABASE_ECHO=False

# JWT Authentication
SECRET_KEY="change-this-to-a-random-secret-key-in-production"
ALGORITHM="HS256"
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Redis (for Celery and caching)
REDIS_URL="redis://localhost:6379/0"
CELERY_BROKER_URL="redis://localhost:6379/1"
CELERY_RESULT_BACKEND="redis://localhost:6379/2"

# File Upload
MAX_FILE_SIZE=52428800  # 50MB in bytes
UPLOAD_PATH="./uploads"

# Email (SMTP)
SMTP_SERVER=""
SMTP_PORT=587
SMTP_USERNAME=""
SMTP_PASSWORD=""

# AI APIs for PDF Extraction
GEMINI_API_KEY=""  # Get from https://makersuite.google.com/app/apikey
OPENAI_API_KEY=""  # Get from https://platform.openai.com/api-keys

# Multi-tenancy
DEFAULT_INSTITUTION_ID=""

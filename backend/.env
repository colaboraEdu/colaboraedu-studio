ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS Origins
ALLOWED_ORIGINS=["http://localhost:3000","http://127.0.0.1:3000","http://localhost:5173","http://127.0.0.1:5173","http://192.168.10.178:3000","http://192.168.10.178"]

# Redis (Optional for development)

# colaboraEDU Backend Environment Variables

# App Configuration
APP_NAME="colaboraEDU API"
DEBUG=true
HOST=0.0.0.0
PORT=8004
RELOAD=true

# Database (SQLite for development)
DATABASE_URL="sqlite:///./colaboraedu.db"
